--- 
import "../styles/global.css";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { pageTitle, showSiteTitle = true } = Astro.props;
const siteTitle = "スクリューに身を委ねて";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{showSiteTitle ? siteTitle : pageTitle}</title>
  </head>
  <body>
    <Header />
    {showSiteTitle && <h1>{siteTitle}</h1>}
    <h2>{pageTitle}</h2>
    <slot />
    <Footer />
    <script>
      import "../scripts/menu.js";
    </script>
  </body>
</html>
