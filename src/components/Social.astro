---
const { platform, username, section } = Astro.props;

let displayPlatform = platform;

let href = `https://www.${platform}.com/${username}`;

if (platform.toLowerCase() === "bluesky") {
  href = `https://bsky.app/profile/${username}.bsky.social`;
} else if (platform.toLowerCase() === "x") {
  displayPlatform = "𝕏";
} else if (platform.toLowerCase() === "last.fm") {
  href = `https://www.last.fm/user/${username}`;
} else if (platform.toLowerCase() === "rateyourmusic") {
  href = `https://www.rateyourmusic.com/~${username}`;
}

const linkClass = section === "footer" ? "footer-link" : "about-link";
---

<style>
/* footer用のリンクスタイル */
.footer-link {
  color: #252A34;
  border-radius: 10px;
  border: 0.5px #d8d8d8 solid;
  padding: 0.5rem 1.2rem;
  text-decoration: none;
  margin: 0 5px;
  transition: background-color 0.3s ease, border 0.3s ease; /* 背景色と文字色が0.5秒かけて変化 */
}

.footer-link:hover {
  border: 0.5px white solid;
  background-color: #d8d8d8;
}

  /* about用のリンクスタイル */
  .about-link {
    color: blue;
    padding: 0 0.5rem;
  }
</style>

<a href={href} class={linkClass} target="_blank" rel="noopener"
  >{displayPlatform}</a
>
