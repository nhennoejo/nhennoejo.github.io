---
const { title, url, thumbnailSrc, thumbnailAlt, date } = Astro.props;
const formattedDate = new Date(date).toLocaleDateString("ja-JP", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<li class="post-card">
  <a href={url}>
    <img src={thumbnailSrc} alt={thumbnailAlt} class="post-thumbnail" />
    <div class="post-text">
      <h2 class="post-title">{title}</h2>
      <p class="post-date">{formattedDate}</p>
    </div>
  </a>
</li>

<style>
  .post-card {
    list-style: none;
    overflow: hidden;
    background: white;
    transition: transform 0.2s ease;
  }

  a {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .post-thumbnail {
    width: 100%;
    border-radius: 7px;
    height: auto;
    object-fit: cover;
    aspect-ratio: 16 / 9;
  }

  .post-text {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    flex-grow: 1;
  }

  .post-title {
    font-size: 1.1rem;
    font-weight: bold;
    margin: 0;
  }

  .post-date {
    font-size: 0.85rem;
    color: #888;
    margin: 0;
  }
</style>
